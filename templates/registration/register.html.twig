{% extends '/BaseTemplates/IndexBase.html.twig' %}

{# {% form_theme registrationForm 'bootstrap_5_layout.html.twig' %} #}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ asset('/css/style.css') }}">
{% endblock %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="center">
        <h1>Register</h1>
        {{ form_start(registrationForm) }}
            <div class="txt_field">
                {{ form_widget(registrationForm.username) }}
                <span></span>
                {{ form_label(registrationForm.username) }}
            </div>
            <div class="txt_field">
                {{ form_widget(registrationForm.plainPassword.first) }}
                <span></span>
                {{ form_label(registrationForm.plainPassword.first) }}
            </div>
            <div class="txt_field">
                {{ form_widget(registrationForm.plainPassword.second) }}
                <span></span>
                {{ form_label(registrationForm.plainPassword.second) }}
            </div>
            <div class="txt_field">
                {{ form_widget(registrationForm.email) }}
                <span></span>
                {{ form_label(registrationForm.email) }}
            </div>

            <div class="mb-3">
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_label(registrationForm.agreeTerms) }}
            </div>

            <input type="submit" value="Register"></input>
        {{ form_end(registrationForm) }}
        <div class="signup_link">
            Already have an account? <a href="{{ path('app_login') }}">Click here to login</a>
        </div>
    </div>

    
{% endblock %}
