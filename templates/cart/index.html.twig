{% extends '/BaseTemplates/CartBase.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <div class="container mt-5 p-5 border">
        <h1>Cart index</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
            {% set form_id = 0 %}
            {% for cart in carts %}
            {% set form_id = form_id + 1 %}
                <form method="post" id="form_{{form_id}}" action="{{ path('app_cart_edit') }}">
                    <tr>
                        <td>{{ cart.product }}</td>
                        {% set stock = 0 %}
                        {% for product in products %}
                            {% if product == cart.product %}
                                {% set stock = product.stock %}
                            {% endif %}
                        {% endfor %}
                        <input name="cart_id" type="hidden" value="{{ cart.id }}">
                        <td><input type="number" value="{{ cart.quantity }}" min=1 max="{{ stock }}" onchange="form_{{form_id}}.submit()" name="input_quantity"></td>
                        
                        <td>
                            <a href="{{ path('app_cart_delete', {'id': cart.id}) }}" method="post" onclick="return confirm('Are you sure you want to delete this item?')" class="btn">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                </form>
                            {% else %}
                                <tr>
                                    <td colspan="3">no records found</td>
                                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
