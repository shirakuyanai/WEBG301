{% extends "/Admin_interface/base.html.twig" %}

{% block header1 %}Members{% endblock %}
{% block header2 %}Members{% endblock %}

{% block body %}
	{# <a href="{{ path('app_product_new') }}" class="btn bg-primary mb-3">New product</a> #}
	<div class="card">
		<div class="card-header">
			<h3 class="card-title">All members</h3>

			<div class="card-tools">
				<button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
					<i class="fas fa-minus"></i>
				</button>
				<button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
					<i class="fas fa-times"></i>
				</button>
			</div>
		</div>
		<div class="card-body p-0">
			<table class="table table-striped projects">
				<thead>
					<tr>
						<th style="width: 1%" class="text-center">
							ID
						</th>
						<th style="width: 20%" class="text-center">
							Username
						</th>
						<th style="width: 20%" class="text-center">
							Email
						</th>
						<th style="width: 20%" class="text-center">
							Roles
						</th>
						<th style="width: 20%" class="text-center">Action</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td class="text-center">
								{{ user }}
							</td>
							<td class="text-center">
								{{ user.username }}
							</td>
							<td class="text-center">
								{{ user.password }}
							</td class="text-center">
							<td class="text-center">
								{% for role in user.roles %}
									<div>{{role}}</div>
								{% endfor %}
							</td>
							<td class="project-actions text-center">
								<a class="btn btn-info btn-sm" href="{{ path('app_member_edit', {'id': user.id}) }}">
									<i class="fas fa-pencil-alt"></i>
									Edit
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<!-- /.card-body -->
	</div>
{% endblock %}
